module clkdiv( 
   input   wire      clk, 
   output  wire      clk_low, 
   input   wire      rst_n
);


// Internal Declarations
integer count = 0;
reg clk_out = 1'b0;

assign clk_low = clk_out;
always@(posedge clk or negedge rst_n)
begin 
  count <= count + 1;
  if (!rst_n)
    begin
      count   <= 0;
      clk_out <= 1'b0;
    end 
  else 
    begin 
     if(count == 39)
      begin
        clk_out <= !clk_out;
        count   <= 0;
      end
    end
end 
endmodule 